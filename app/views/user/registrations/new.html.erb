<div class="container">
  <div class="mx-3"><h3 class="mb-5">新規ユーザー登録</h3></div>
    <div class="row">
      <div class="col-12">
        <%= render "layouts/errors", obj: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">
          <div class="col-3"><%= f.label :name, 'ユーザー名' %></div>
          <div class="col-3 offset-1"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
        </div>
        <div class="form-group row">
          <div class="col-3"><%= f.label :name, 'メールアドレス' %></div>
          <div class="col-3 offset-1"><%= f.email_field :email, autocomplete: "email", placeholder: "sample.@example.com", size: 25 %></div>
        </div>
        <div class="form-group row">
          <div class="col-3">
            <%= f.label :password, 'パスワード' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-3 offset-1"><%= f.password_field :password, autocomplete: "new-password", size: 25 %></div>
        </div>
        <div class="form-group row">
          <div class="col-3"><%= f.label :password, 'パスワード（確認用）' %></div>
          <div class="col-3 offset-1"><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %></div>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success col-3 offset-4" %>
        </div>
        <% end %>
        <div class="row">
          <div class="col-3 off-set-5">
            <h6>既に登録済みの方</h6>
            <p><%= render "user/shared/links" %>からログインください。</p>
          </div>
        </div>
      </div>
    </div>
</div>
