<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post), style:"font-size:20px;", method: :delete, remote: true do %>
    <i class="far fa-bookmark"></i> ブックマークを外す
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), style:"font-size:20px;", method: :post, remote: true do %>
    <i class="fas fa-bookmark"></i> ブックマーク
  <% end %>
<% end %>
