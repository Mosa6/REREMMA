<h1>ユーザー情報編集</h1>
<%= form_with model:@user, url: user_path, method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :ユーザーネーム, class: "col-3" %>
    <%= f.text_field :name, class: "form-control col-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class: "col-3" %>
    <%= f.email_field :email, class: "form-control col-3" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "編集内容を保存", class: "btn btn-success col-4 offset-2" %>
  </div>
<% end %>


