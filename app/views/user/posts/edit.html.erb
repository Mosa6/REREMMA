<h1>投稿編集</h1>
<%= form_with(model: @post, url: post_path, local: true) do |f| %>
  <div class="actions">
    <%= f.label :image,"画像" %>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.label :name, "ジム名" %>
    <%= f.text_field :name %>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
    <%= f.label :introduction, "紹介文" %>
    <%= f.text_field :introduction %>
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>
