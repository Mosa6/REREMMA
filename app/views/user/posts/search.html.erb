<div class="container">
  <div class="row">
    <h2>検索結果</h2>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table border-bottom table-hover table-inverse">
        <thead>
          <tr>
            <th>ジム名</th>
            <th>住所</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr onclick='window.location="<%= '/posts/' + post.id.to_s %>"' role="link">
            <td class="pr-5"><%= post.name %></td>
            <td class="pr-5"><%= post.address %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


