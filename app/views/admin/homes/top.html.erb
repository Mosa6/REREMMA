<div class="px-5 mx-5">
  <div class="mx-3"><h3 class="mb-5">管理者トップ</h3></div>
  <div class="row mx-5 px-5">
    <table class="table border-bottom table-hover table-background">
      <thead class="thead-light">
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr onclick='window.location="<%= '/admin/users/' + user.id.to_s %>"' role="link">
          <td><%= link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.active_for_authentication? %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-muted">退会</b>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @users %>
</div>
