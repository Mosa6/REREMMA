<div class="container">
  <div class="row">
    <h3 class="mb-3">管理者ログイン</h3>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <div class="col-5"><%= f.label :email, 'メールアドレス' %></div><br />
      <div class="col-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="form-group row">
      <div class="col-5"><%= f.label :password, 'パスワード' %></div><br />
      <div class="col-7"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>
    <!--<% if devise_mapping.rememberable? %>-->
    <!--<div class="field">-->
      <!--<%= f.check_box :remember_me %>-->
      <!--<%= f.label :remember_me %>-->
    <!--</div>-->
    <!--<% end %>-->
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary col-3 offset-5" %>
    </div>
  <% end %>
</div>