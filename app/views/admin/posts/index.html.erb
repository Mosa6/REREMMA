<div class="container">
  <div class="row">
    <h1>投稿一覧</h1>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジム画像</th>
          <th>ジム名</th>
          <th>住所</th>
          <th>紹介文</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr onclick='window.location="<%= '/admin/posts/' + post.id.to_s %>"' role="link">
          <td><%= image_tag post.image, size: "100x100" %></td>
          <td><%= post.name %></td>
          <td><%= post.address %></td>
          <td><%= post.introduction %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @posts %>
</div>


