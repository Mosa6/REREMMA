<div class="container">
  <div class="row">
    <h3><%= @user.name %>さんのユーザー詳細</h3>
  </div>
  <div class="row col-10">
    <table class="table mx-3">
      <tbody>
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>ユーザーステータス</td>
          <td>
            <% if @user.active_for_authentication? %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-muted">退会</b>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center">
  <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success col-3" %>
</div>
