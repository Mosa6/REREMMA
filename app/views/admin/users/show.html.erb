<div class="mb-2">
  <h3 class="ml-5 mini-title"><%= @user.name %>さんのユーザー詳細</h3>
</div>

<div class="row mx-5">
  <table class="table mx-5 table-borderless col-5">
    <tbody>
      <tr>
        <td>ユーザー名</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>ユーザーステータス</td>
        <td>
          <% if @user.active_for_authentication? %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-muted">退会</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="ml-5 mt-5">
  <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success mr-3" %>
