<div class="container">
  <div class="mb-5">
    <h3 class="mb-5"><%= @user.name %>さんのユーザー情報編集</h3>
  </div>
    <%= render "layouts/errors", obj: @user %>
    <%= form_with model:@user, url: admin_user_path(@user), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :ユーザーネーム, class: "col-3" %>
          <%= f.text_field :name, class: "form-control col-3 mr-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: "col-3" %>
        <%= f.email_field :email, class: "form-control col-3" %>
      </div>
      <div class="form-gropu row">
        <%= f.label :is_deleted, 'ユーザーステータス', class: "col-3" %>
        <div class="custom-control custom-radio">
          <%= f.radio_button :is_deleted, false %> <%= f.label :is_active, "有効", class:"mr-3 text-dark" %>
          <%= f.radio_button :is_deleted, true %> <%= f.label :is_active, "退会", class:"text-dark" %>
        </div>
      </div>
      <div class="actions mt-5">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg col-2 offset-3" %>
      </div>
    <% end %>
</div>




